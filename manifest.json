{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Twitch Hide Games",
  "description": "Hide games you don't care about when browsing streams on the Twitch website",
  "permissions": ["storage"],
  "content_scripts": [{
      "matches": ["*://*.twitch.tv/directory/all"],
      "css": ["hider.css"],
      "js": ["jquery.min.js", "blacklist.js", "hider.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "38": "thg38.png"
    },
    "default_title": "Manage game blacklist",
    "default_popup": "popup.html"
  }
}